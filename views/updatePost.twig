{% extends "base.twig" %}

{% block title %}Accueil{% endblock %}

{% block content %}
    <div class="m-10 p-10 bg-w brd-mc">
        <form method="post">
            <div class="input-field">
                <label for="title">Title : </label>
                <input class="full" type="text" name="title" id="title" value="{{ post.title }}">
            </div>

            <div class="input-field">
                <textarea name="content">{{ post.content }}</textarea>
            </div>

            <div class="input-field">
                <label for="category">Category : </label>
                <input class="full" id="category" type="text" name="category" value="{{ post.category }}">
            </div>

            <div class="input-field flex flex-m flex-c">
                <button class="btn blue">Envoyer</button>
            </div>
        </form>
    </div>
{% endblock %}
{% block script %}
    <script>
        window.onload = function () {
            tinymce.init({selector: 'textarea'});
        }
    </script>
{% endblock %}